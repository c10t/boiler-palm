{
  "name": "boiler-palm",
  "version": "0.0.1",
  "author": {
    "name": "c10t"
  },
  "private": true,
  "description": "A palm-tree wanna be a boilerplate",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/c10t/boiler-palm.git"
  },
  "bugs": {
    "url": "https://github.com/c10t/boiler-palm/issues"
  },
  "scripts": {
    "dev:client": "cross-env NODE_ENV=development webpack-dev-server --mode development --config ./devtools/webpack/client.config.js",
    "dev:server": "cross-env NODE_ENV=development webpack --mode development --config ./devtools/webpack/server.config.js -w",
    "dev": "nodemon ./dist/server.bundle.js",
    "lint": "tslint 'src/**/*.ts{,x}'",
    "format": "tslint --fix 'src/**/*.ts{,x}'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/node": "^10.5.4",
    "@types/react": "^16.4.7",
    "@types/react-dom": "^16.0.6",
    "@types/webpack-env": "^1.13.6",
    "awesome-typescript-loader": "^5.2.0",
    "cross-env": "^5.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "react-hot-loader": "^4.3.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5",
    "webpack-merge": "^4.1.3",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "express": "^4.16.3",
    "prettier": "^1.14.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  }
}
